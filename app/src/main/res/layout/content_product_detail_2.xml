    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below= "@id/htab_appbar"

        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:id="@+id/cardview1"
            android:layout_below="@+id/productViewPager"
            android:layout_centerInParent="true"

            android:layout_margin="5dp"
            android:clickable="true"
            android:elevation="100dp"



            app:cardBackgroundColor="@color/colorPrimary"


            android:foreground="?android:attr/selectableItemBackground"

            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/title"
                android:textColor="@color/color_sec"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="Men leather Jacket"
                android:textStyle="bold"




                android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                />



            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout_description_name"
                android:layout_width="match_parent"


                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="0.5dp"
                    android:id="@+id/seperator3"
                    android:layout_below="@+id/sizelayout"
                    android:background="#c0c0c0"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="0.5dp"
                    android:id="@+id/seperator2"
                    android:layout_below="@+id/sizelayout"
                    android:background="#c0c0c0"/>



                <TextView

                    android:id="@+id/description_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:editable="false"
                    android:enabled="false"

                    android:hint="Category"
                    android:textColor="@color/color_sec"
                    android:text="movie"


                    android:textSize="20dp" />


                <TextView

                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="3dp"

                    android:layout_marginRight="10dp"
                    android:editable="false"
                    android:enabled="false"



                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_sec"
                    android:text="$800"
                    android:textStyle="italic"


                    android:textSize="25dp" />






            </LinearLayout>








            >


        </android.support.v7.widget.CardView>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">






            <com.alespero.expandablecardview.ExpandableCardView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="Description"
                android:id="@+id/profile"
                app:icon="@drawable/ic_menu_camera"
                app:inner_view="@layout/detail"
                app:expandOnClick="true"
                >




            </com.alespero.expandablecardview.ExpandableCardView>

            <com.alespero.expandablecardview.ExpandableCardView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile1"
                app:title="Size"
                app:icon="@drawable/minus"
                app:inner_view="@layout/size"
                app:expandOnClick="true"

                >




            </com.alespero.expandablecardview.ExpandableCardView>

            <com.alespero.expandablecardview.ExpandableCardView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile2"
                app:title="Quantity"
                app:icon="@drawable/plus"
                app:inner_view="@layout/quantity"
                app:expandOnClick="true"

                >




            </com.alespero.expandablecardview.ExpandableCardView>


            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Add To Cart"
                android:id="@+id/addtocart"
                android:textColor="@color/color_sec"
                />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
